service:
  grpc_address: ":50051"
  http_address: ":8081"
  swagger_address: ":8082"
  admin_address: ":6060"
  timeout: 2s
  worker_limit: 16
  queue_size: 512

db:
  read_host: db
  write_host: db
  port: 5432
  name: pvz
  sslmode: disable
  pool:
    max_open: 20
    max_idle: 10
  migrations_dir: migrations

cache:
  enabled: true
  max_size: 1000
  ttl: 5m
  cleanup_interval: 10m

kafka:
  brokers:
    - kafka:29092
  topic: pvz.events-log
  producer:
    timeout: 10s
    retries: 3

outbox:
  worker_interval: 5s
  batch_size: 100
  dlq:
    retry_interval: 5m
    max_retries: 3

telegram:
  bot_token: "API"
  chat_id: 0 // получать через @userinfobot
  enabled: true
  timeout: 10s
  retry_attempts: 3